<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background"
    tools:context="com.simplicity.anuj.myday.IntroActivityUtils.FragmentScreen1">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Transparent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/frameLayout"
        app:layout_constraintHorizontal_bias="0.517">

        <TextView
            android:id="@+id/f1.textView"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:text="Welcome to MyDay"
            android:textSize="56sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight"
            android:alpha="0.7" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryLight"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">
        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/colorPrimaryLight"-->
        <!--android:alpha="0.7"/>-->
        <TextView
            android:id="@+id/f1.textViewDescription"
            android:layout_width="339dp"
            android:alpha="1"
            android:layout_height="wrap_content"
            android:text="A simple yet elegant companion for you to pour your thoughts into.\nClick next to know more"
            android:textSize="21sp"
            android:gravity="center" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
